{{>navbar}}

<div class="col-md-7 mx-auto col-12 px-0 pt-3">
  {{>header title = "SunDial"}}

  <div>
    <h1 id="userH1"></h1>
  </div>
  <nav class="text-center navbar navbar-default mx-0 px-0">
    <button type="button" class="py-2 col-12 navbar-toggle collapsed selUser btn btn-info text-white" data-toggle="collapse"
      data-target="#codebrainery-toggle-nav" aria-expanded="false">
      Select User
    </button>
    <div class="collapse navbar-collapse" id="codebrainery-toggle-nav">
      <ul class="mx-2 list-group userProjects list-group-flush">
        {{#each users}}
        <li data-id={{id}} class="list-group-item userInfoProjects">{{firstName}} {{lastName}}</li>
        {{/each}}
      </ul>
    </div>
  </nav> <!-- close navbar nav -->


  <div>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">PROJECT NAME</th>
          <th scope="col">TIME START</th>
          <th scope="col">TIME END</th>
          <th scope="col">TIME SPENT</th>
        </tr>
      </thead>
      <tbody id="instanceDataProjects">
        {{#each instances}}
        <tr id="{{id}}">
          <td>{{projectName}}</td>
          <td data-timein="{{timeIn}}">{{timeIn}}</td>
          <td data-timeout="{{timeOut}}">{{timeOut}}</td>
          <td class="timeSpentProjects"></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

</div>